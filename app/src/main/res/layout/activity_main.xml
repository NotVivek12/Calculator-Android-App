<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:padding="20dp">

    <TextView
        android:id="@+id/screen"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom|right"
        android:text="0"
        android:textColor="@color/white"
        android:textSize="45dp"
        android:textStyle="bold"
        android:paddingRight="50dp"
        android:paddingBottom="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_above="@id/buttons"/>

    <LinearLayout
        android:id="@+id/buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:paddingTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/ac"
                android:text="AC"
                style="@style/btnOrange"/>

            <Button
                android:id="@+id/seven"
                android:text="7"
                style="@style/btnGray"/>

            <Button
                android:id="@+id/four"
                android:text="4"
                style="@style/btnGray"/>

            <Button
                android:id="@+id/one"
                android:text="1"
                style="@style/btnGray"/>

            <Button
                android:id="@+id/doubleZero"
                android:text="00"
                style="@style/btnGray"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/percentage"
                android:text="%"
                style="@style/btnOrange"/>

            <Button
                android:id="@+id/eight"
                android:text="8"
                style="@style/btnGray"/>

            <Button
                android:id="@+id/five"
                android:text="5"
                style="@style/btnGray"/>

            <Button
                android:id="@+id/two"
                android:text="2"
                style="@style/btnGray"/>

            <Button
                android:id="@+id/zero"
                android:text="0"
                style="@style/btnGray"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/c"
                android:text="C"
                style="@style/btnOrange"/>

            <Button
                android:id="@+id/nine"
                android:text="9"
                style="@style/btnGray"/>

            <Button
                android:id="@+id/six"
                android:text="6"
                style="@style/btnGray"/>

            <Button
                android:id="@+id/three"
                android:text="3"
                style="@style/btnGray"/>

            <Button
                android:id="@+id/dot"
                android:text="."
                style="@style/btnGray"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/division"
                android:text="\u00F7"
                style="@style/btnOrange"/>

            <Button
                android:id="@+id/multiply"
                android:text="X"
                style="@style/btnOrange"/>

            <Button
                android:id="@+id/subtract"
                android:text="-"
                style="@style/btnOrange"/>

            <Button
                android:id="@+id/plus"
                android:text="+"
                style="@style/btnOrange"/>

            <Button
                android:id="@+id/equals"
                android:text="="
                style="@style/btnOrange"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>